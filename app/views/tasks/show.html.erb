<div class="container">
    <h1><%= @task.title %></h1>

  <div class="card-body details">
    <p><%= @task.details %></p>
  </div>

  <div class="card-body completed">
    <% if @task.completed == true %>
        <i class="fa-regular fa-square-check" style="color: #050505"></i>
        This task is completed
    <% else %>
        <i class="fa-regular fa-square" style="color: #050505"></i>
        This task is not completed yet
    <% end %>
  </div>

  <div class="btn btn-info">
    <%= link_to "Edit this task", edit_task_path %>
  </div>

  <div>
    <%= link_to  "Back to list", tasks_path %>
  </div>
</div>
