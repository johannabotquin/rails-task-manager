<div class="container">

  <h1>My tasks</h1>

  <div class="list">
    <% @tasks.each do |task| %>
        <div class="task">
          <% if task.completed == true %>
              <i class="fa-regular fa-square-check" style="color: #050505"></i>
          <% else %>
              <i class="fa-regular fa-square" style="color: #050505"></i>
          <% end %>

        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete" do%>
          <i class="fa-solid fa-trash-can" style="color: #121212;"></i>
        <% end %>
    <% end %>
        </div>
  </div>


  <div class="addlink btn btn-outline-info">
    <%= link_to "Add a new task", new_task_path %>
  </div>
